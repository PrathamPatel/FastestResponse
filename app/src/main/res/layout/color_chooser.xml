<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="CHOOSE YOUR COLOUR: "
        android:textAlignment="center"
        android:fontFamily="@font/good_times"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



    <ImageView
        android:id="@+id/arrRed"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="105sp"
        android:layout_marginTop="28dp"
        android:tint="@color/arrow_red"
        android:rotation="270"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_baseline_double_arrow_24" />


    <ImageView
        android:id="@+id/arrBlue"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:tint="@color/arrow_blue"
        android:rotation="270"
        app:layout_constraintStart_toEndOf="@+id/arrRed"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_baseline_double_arrow_24" />

    <ImageView
        android:id="@+id/arrGrey"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:tint="@color/arrow_greyish"
        android:rotation="270"
        app:layout_constraintStart_toEndOf="@+id/arrBlue"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_baseline_double_arrow_24" />


    <ImageView
        android:id="@+id/arrGreen"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginBottom="38dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="28dp"
        android:tint="@color/arrow_green"
        android:rotation="270"
        app:layout_constraintStart_toEndOf="@+id/arrGrey"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/ic_baseline_double_arrow_24" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:minHeight="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/arrRed"/>

</androidx.constraintlayout.widget.ConstraintLayout>